<hr>
<h1>All Boards</h1>
<hr>
<h2>Add a new board</h2>
<form action="/insert_board" method="post">
  <label for="name_box">Name</label>
  <input type="text" id="name_box" name="query_name" placeholder="Enter board name">
  <button type="submit">Add board</button>
</form>
<hr>
<ul>
<% Board.all.each do |a_board| %>
<li><a href="/boards/<%= a_board.id %>"><%= a_board.name %></a></li>
<% end %>
</ul>
